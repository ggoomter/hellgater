if "%~1"=="" (
    echo ⚠️  사용법: PDF 파일이나 폴더를 이 파일에 드래그앤드롭하세요
    echo.
    echo 또는 직접 실행하여 현재 폴더의 모든 PDF를 처리합니다.
    echo 현재 폴더의 PDF를 처리하시겠습니까? (Y/N^)
    set /p choice=
    if /i "%choice%"=="Y" (
        python auto-pdf.py .
    ) else (
        echo 취소되었습니다.
    )
) else (
    python auto-pdf.py "%~1"
)

echo.
echo ════════════════════════════════════════════════════════════
echo 완료! 아무 키나 누르면 창이 닫힙니다.
